<% include layouts/header %> <% include layouts/navbar %>
<div class="container">
  <div class="row">
    <div class="col-10 col-sm-8 col-md-6 mt-5 mx-auto">
      <h1 class="text-capitalize">add product</h1>
      <form action="/add-product" method="post">
        <div class="form-group my-3">
          <label for="name">Product Name</label>
          <input
            type="text"
            name="name"
            class="form-control"
            placeholder="product name"
          />
        </div>
        <div class="form-group my-3">
          <label for="image">Product Photo</label>
          <input
            type="text"
            name="image"
            class="form-control"
            placeholder="image"
          />
        </div>

        <div class="form-group my-3">
          <label for="price">Product Price</label>
          <input
            type="number"
            name="price"
            class="form-control"
            placeholder="price "
          />
        </div>
        <button
          type="submit"
          class="mt-4 btn btn-outline-secondary btn-block text-capitalize"
        >
          submit
        </button>
      </form>
    </div>
  </div>
</div>
<% include layouts/footer %>
