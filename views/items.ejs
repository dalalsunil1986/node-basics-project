<% include layouts/header %> <% include layouts/navbar %>
<section class="py-5">
  <div class="container mt-5">
    <div class="row">
      <% if(items.length>0) {%> <% items.forEach(function(item){%>
      <div class="col-10 col-md-6 mx-auto col-lg-4 product text-center my-3">
        <div class="card">
          <img src="<%= item.image%>" class="card-img-top" alt="" />
        </div>
        <div class="card-body">
          <h4 class="mt-3 text-uppercase"><%= item.name %></h4>
          <h5>$ <%= item.price %></h5>
          <p class="text-left"><%= item.description %></p>
        </div>
        <div class="card-footer d-flex justify-content-between">
          <a href="/edit-item/<%= item._id %>" class="btn btn-outline-secondary"
            >edit</a
          >
          <a href="/delete-item/<%= item._id %>" class="btn btn-outline-danger"
            >delete</a
          >
        </div>
      </div>
      <% }) %> <%} else {%>

      <div class="col-10 col-md-6 text-center text-capitalize">
        <h3>there are no items to display</h3>
      </div>
      <%} %>
    </div>
  </div>
</section>
<% include layouts/footer %>
